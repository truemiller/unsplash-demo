{
  "extends": "next/core-web-vitals",
  "plugins": [
    "prettier",
    "tailwindcss",
    "simple-import-sort",
    "unused-imports"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": false,
        "singleQuote": false
      }
    ],
    "tailwindcss/classnames-order": "error",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "unused-imports/no-unused-imports": "error"
  }
}
